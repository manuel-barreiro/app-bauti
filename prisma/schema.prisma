// prisma/schema.prisma
datasource db {
  provider = "mongodb"
    url      = env("DATABASE_URL")
  }

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  ingredients String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}